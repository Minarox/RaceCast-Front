// https://developers.cloudflare.com/workers/wrangler/configuration/
{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "racecast-front",
	"main": "./dist/_worker.js/index.js",
	"workers_dev": false,
	"compatibility_date": "2025-10-01",
	"compatibility_flags": [
		"nodejs_compat",
		"global_fetch_strictly_public"
	],
	"assets": {
		"binding": "ASSETS",
		"directory": "./dist"
	},
	"observability": {
		"enabled": true
	},
	"placement": {
		"mode": "smart"
	}
}
